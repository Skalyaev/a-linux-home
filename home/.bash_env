export EDITOR=nvim
export VISUAL=nvim

export PYTHONSTARTUP="$HOME/.config/.pythonrc"
export GIT_CONFIG_GLOBAL="$HOME/.config/.gitconfig"

export NODE_REPL_HISTORY="$HOME/.history/.node_repl_history"
export LESSHISTFILE="$HOME/.history/.lesshst"

export NVM_DIR="$HOME/.local/share/nvm"
export CARGO_HOME="$HOME/.local/share/cargo"
export RUSTUP_HOME="$HOME/.local/share/rustup"

export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/.local/src/lls/bin"
export PATH="$PATH:$NVM_DIR"
export PATH="$PATH:$CARGO_HOME/bin"
export PATH="$PATH:$DENO_DIR/bin"

export INPUTRC="$HOME/.config/.inputrc"

export HISTCONTROL=ignoreboth
export HISTFILE="$HOME/.history/.bash_history"

HISTORY="history -n"
HISTORY="$HISTORY; history -w"
HISTORY="$HISTORY; history -c"
HISTORY="$HISTORY; history -r"

export PROMPT_COMMAND="$HISTORY; $PROMPT_COMMAND"
unset HISTORY
